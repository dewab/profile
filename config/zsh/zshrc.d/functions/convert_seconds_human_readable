convert_seconds_human_readable () {
	local seconds=${1:-0}
	[[ $seconds == <-> ]] || { echo "Usage: convert_seconds_human_readable <seconds>" >&2; return 1; }

	local hours mins secs
	# Match original format: 02dh 02dm 02ds with hours mod 24
	(( hours=(seconds%86400)/3600 ))
	(( mins=(seconds%3600)/60 ))
	(( secs=seconds%60 ))

	printf "%02dh %02dm %02ds" $hours $mins $secs
}
