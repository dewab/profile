convert_seconds () {
	local seconds=${1:-0}
	[[ $seconds == <-> ]] || { echo "Usage: convert_seconds <seconds>" >&2; return 1; }

	local hours mins secs
	# Match original format: HH:MM:SS with hours mod 24
	(( hours=(seconds%86400)/3600 ))
	(( mins=(seconds%3600)/60 ))
	(( secs=seconds%60 ))

	printf "%02d:%02d:%02d" $hours $mins $secs
}
